{
  "name": "bahamut-sign-helper-script",
  "description": "打開巴哈自動跑所有簽到，包含動畫瘋、公會簽到、每日簽到等功能。",
  "license": "MIT",
  "version": "6.0.2",
  "private": true,
  "author": {
    "name": "moontai0724"
  },
  "homepage": "https://github.com/moontai0724/bahamut-sign-helper-script",
  "bugs": {
    "url": "https://github.com/moontai0724/bahamut-sign-helper-script/issues"
  },
  "user-script-meta": {
    "name": "巴哈姆特簽到腳本（每日、公會、動畫瘋）",
    "namespace": "https://home.gamer.com.tw/moontai0724",
    "match": [
      "https://*.gamer.com.tw/*"
    ],
    "grant": [
      "GM_getResourceText",
      "GM_xmlhttpRequest",
      "GM_setValue",
      "GM_getValue"
    ],
    "connect": [
      "api.gamer.com.tw",
      "guild.gamer.com.tw",
      "script.google.com",
      "script.googleusercontent.com",
      "ani.gamer.com.tw",
      "home.gamer.com.tw"
    ],
    "noframes": ""
  },
  "type": "module",
  "scripts": {
    "dev": "nodemon scripts/webdav.ts",
    "preview": "concurrently --kill-others \"http-server dist/pages -p 8080\" \"vite build -w\"",
    "build": "pnpm build:view && pnpm build:script",
    "build:view": "vite build",
    "build:script": "rollup -c --configPlugin typescript --bundleConfigAsCjs",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check --ignore-unknown .",
    "prepare": "husky install"
  },
  "dependencies": {
    "primevue": "^4.3.9",
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@rollup/pluginutils": "^5.3.0",
    "@rushstack/eslint-patch": "^1.12.0",
    "@types/html-minifier": "^4.0.5",
    "@types/node": "^24.3.1",
    "@types/tampermonkey": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-airbnb-with-typescript": "^8.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "eslint-plugin-vue": "^9.33.0",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rollup": "^4.50.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.5",
    "vite-plugin-singlefile": "^2.3.0",
    "vue-tsc": "^3.0.6"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache --cache-location node_modules/.cache/eslint",
    "*.**": "prettier --check --ignore-unknown"
  }
}
